<h1> Actor #<%= @selected_actor.id %> details </h1>
<a href = "/actors">Go back </a>
<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @selected_actor.name%></dd>
  
  <dt>Dob</dt>
  <dd><%= @selected_actor.dob%></dd>

  <dt>Bio</dt>
  <dd><%= @selected_actor.bio%></dd>

  <dt>Image</dt>
  <dd> <img src= <%= @selected_actor.image %>> </dd>

  <dt>Created at</dt>
  <dd><%= @selected_actor.created_at%></dd>

  <dt>Updated at</dt>
  <dd><%= @selected_actor.updated_at%></dd>

</ul>
<hr>

<h2>Filmography</h2>

<table border = 1>
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character Name</th>
    <th></th>
  </tr>

  <%@chars_played.all.each do |char| %>

  <% movie_id = Movie.where({:id => char.movie_id})[0] %>

  <tr>
    <td> <%= Movie.where({:id => movie_id})[0].title %> </td>
    <td> <%= Movie.where({:id => movie_id})[0].year %> </td>


    <td> <%= Director.where({:id => movie_id})[0].name %> </td>
    <td> <%= char.name %> </td>
    <td> <a href = "/movies/<%=movie_id.id%>"> Show details </a></td>
  </tr>

  <% end %>
