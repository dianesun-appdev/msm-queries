<h1> Director #<%= @selected_director.id %> details </h1>>

<a href = "/directors"> Go back </a>
<hr>

<dl>
  <dt>Name</dt>
  <dd><%= @selected_director.name%></dd>
  
  <dt>Dob</dt>
  <dd><%= @selected_director.dob%></dd>

  <dt>Bio</dt>
  <dd><%= @selected_director.bio%></dd>

  <dt>Image</dt>
  <dd> <img src= <%= @selected_director.image %>> </dd>

  <dt>Created at</dt>
  <dd><%= @selected_director.created_at%></dd>

  <dt>Updated at</dt>
  <dd><%= @selected_director.updated_at%></dd>

</ul>

<hr>
<h2>Filmography</h2>

<table border = 1>
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

  <% @filmography.all.each do |movie| %>

  <tr>
    <td> <%= movie.id %> </td>
    <td> <img src= <%= movie.image %>> </td>
    <td> <%= movie.title %> </td>
    <td> <%= movie.year %> </td>
    <td> <%= @selected_director.name %> </td>
    <td> <a href = "/movies/<%=movie.id%>"> Show details </a></td>
  </tr>

  <% end %>
